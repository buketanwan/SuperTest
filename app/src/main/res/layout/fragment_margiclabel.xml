<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.supe.supertest.common.wdiget.MagicalLabelView
        android:id="@+id/magical_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:minWidth="@dimen/dp_105"
        android:minHeight="@dimen/dp_35"
        app:labelBackground="@drawable/select_label_bg"
        app:labelTextColor="@drawable/select_label_text_color"
        app:labelTextPaddingBottom="@dimen/dp_10"
        app:labelTextPaddingLeft="@dimen/dp_30"
        app:labelTextPaddingRight="@dimen/dp_30"
        app:labelTextPaddingTop="@dimen/dp_10"
        app:labelTextSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineMargin="@dimen/dp_15"
        app:selectType="SINGLE_IRREVOCABLY"
        app:wordMargin="@dimen/dp_15" />

    <Button
        android:id="@+id/bt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展开"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/magical_label"

        />


    <ImageView
        android:id="@+id/iv_image1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_image2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/iv_image3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <RatingBar
            android:id="@+id/rating1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"
           />

        <RatingBar
            android:id="@+id/rating2"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"
            />

        <RatingBar
            android:id="@+id/rating3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1"
            android:rating="3"
            android:visibility="visible"
            style="@style/my_bar"
            />
        <com.supe.supertest.test.view.MyRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:starCount="5"
            app:starImageSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            app:starFill="@drawable/icon_yellow_star"
            app:starEmpty="@drawable/icon_star_gray"
            />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>